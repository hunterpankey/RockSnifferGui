<Window x:Class="RockSnifferGui.PlayHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockSnifferGui"
        mc:Ignorable="d"
        Title="Song Play History" Height="450" Width="1120" ScrollViewer.CanContentScroll="True">
    <Canvas Margin="0" Width="Auto" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left">
        <DataGrid x:Name="playHistoryDataGrid" RowHeight="30" ColumnWidth="100" AutoGenerateColumns="False" Canvas.Top="36" DataContext="{Binding songDetails}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="374" Canvas.Left="10" IsReadOnly="True" Width="1093">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="startTime" Binding="{Binding StartTime}" Header="Time" MinWidth="130" />
                <DataGridTextColumn x:Name="artistNameColumn" Binding="{Binding SongDetails.ArtistName}" Header="Artist" MinWidth="200" Width="200" />
                <DataGridTextColumn x:Name="songNameColumn" Binding="{Binding SongDetails.SongName}" Header="Song" MinWidth="200" Width="200" />
                <DataGridTextColumn x:Name="albumNameColumn" Binding="{Binding SongDetails.AlbumName}" Header="Album" MinWidth="200" Width="200" />
                <DataGridTextColumn x:Name="yearNameColumn" Binding="{Binding SongDetails.AlbumYear}" Header="Year" MinWidth="50" Width="50" />

                <DataGridTextColumn x:Name="hitNotesColumn" Binding="{Binding NoteData.TotalNotesHit}" Header="Hit" MinWidth="70" Width="70" />
                <DataGridTextColumn x:Name="missedNotesColumn" Binding="{Binding NoteData.TotalNotesMissed}" Header="Missed" MinWidth="70" Width="70" />
                <DataGridTextColumn x:Name="noteAccuracyColumn" Binding="{Binding NoteData.Accuracy}" Header="Accuracy" MinWidth="70" Width="70" />
                <DataGridTextColumn x:Name="maxStreakColumn" Binding="{Binding NoteData.HighestHitStreak}" Header="Top Streak" MinWidth="70" Width="70" />
                <!--<DataGridTextColumn x:Name="nameColumn" Binding="{Binding Name}" Header="Name" />
                <DataGridTextColumn x:Name="name2Column" Binding="{Binding Name2}" Header="Name2" />
                <DataGridTextColumn x:Name="thingColumn" Binding="{Binding Thing}" Header="Thing" />-->
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="refreshButton" Content="Refresh" Canvas.Top="10" Width="75" Click="refreshButton_Click" Canvas.Left="10" VerticalAlignment="Top" />
    </Canvas>


</Window>
