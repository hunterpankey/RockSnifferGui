<UserControl x:Class="RockSnifferGui.Controls.NotesPlayedDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockSnifferGui.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="350">
    <UserControl.DataContext>
        <local:NotesPlayedViewModel x:Name="npvm" />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelLiteral" TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Canvas.Left" Value="10" />
            </Style>
            <Style x:Key="LabelValue" TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Canvas.Left" Value="115" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Canvas Grid.Row="1" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top" Width="350" Background="#ffffffff">
        <Label x:Name="songTimerLabel" Content="Time" Style="{StaticResource LabelLiteral}" Canvas.Top="10" />
        <Label x:Name="songTimerimeValueLabel" Content="{Binding SongTimerDisplay}" Style="{StaticResource LabelValue}" Canvas.Top="10"/>

        <Label x:Name="notesHitLabel" Content="Notes Hit" Style="{StaticResource LabelLiteral}" Canvas.Top="41"/>
        <Label x:Name="notesHitValueLabel" Content="{Binding NotesHit}" Style="{StaticResource LabelValue}" Canvas.Top="41"/>

        <Label x:Name="notesMissedLabel" Content="Notes Missed" Style="{StaticResource LabelLiteral}" Canvas.Top="71"/>
        <Label x:Name="notesMissedValueLabel" Content="{Binding NotesMissed}" Style="{StaticResource LabelValue}" Canvas.Top="71"/>

        <Label x:Name="totalNotesLabel" Content="Total Notes" Style="{StaticResource LabelLiteral}" Canvas.Top="102"/>
        <Label x:Name="totalNotesValueLabel" Content="{Binding TotalNotes}" Style="{StaticResource LabelValue}" Canvas.Top="102"/>

        <Label x:Name="currentStreakLabel" Content="Current Streak" Style="{StaticResource LabelLiteral}" Canvas.Top="134"/>
        <Label x:Name="currentStreakValueLabel" Content="{Binding CurrentStreak}" Style="{StaticResource LabelValue}" Canvas.Top="134"/>

        <Label x:Name="highestStreakLabel" Content="Highest Streak" Style="{StaticResource LabelLiteral}" Canvas.Top="165"/>
        <Label x:Name="highestStreakValueLabel" Content="{Binding MaxStreak}" Style="{StaticResource LabelValue}" Canvas.Top="165"/>

        <Label x:Name="noteHitPercentageLabel" Content="Note Hit Pct." Style="{StaticResource LabelLiteral}" Canvas.Top="195"/>
        <Label x:Name="noteHitPercentageValueLabel" Content="{Binding AccuracyDisplay}" Style="{StaticResource LabelValue}" Canvas.Top="195" />
        <!--<Binding Path="Accuracy" StringFormat="{}{0}%" />
        </Label>-->
    </Canvas>
</UserControl>
